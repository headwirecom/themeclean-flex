          "x-form-label": "Block Width",
          "x-form-type": "materialradio",
          "x-default": "default",
          "properties": {
            "default": {
              "x-form-name": "Default",
              "x-form-value": "default"
            },
            "full": {
              "x-form-name": "Full Width",
              "x-form-value": "full"
